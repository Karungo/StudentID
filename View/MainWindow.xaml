<Window x:Class="StudentID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Data Processor" Height="450" Width="800">
    <Grid>
        <Button Content="Select Excel File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,10,0,0" Command="{Binding LoadFileCommand}" />
        <Button Content="Export to Excel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="170,10,0,0" Command="{Binding ExportToFileCommand}" />
        <DataGrid ItemsSource="{Binding Students}" AutoGenerateColumns="True" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="760" Height="350" />
    </Grid>
</Window>
